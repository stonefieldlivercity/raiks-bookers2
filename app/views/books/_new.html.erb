<div>
  <h2 class = "mt-3">New book</h2>

  <%= form_with model: @book, local:true do |f| %>

    <div class = "field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class = "field">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
  <div>
    <%= f.submit "Create Book", class: 'btn btn-success' %>
  </div>
  <% end %>
</div>

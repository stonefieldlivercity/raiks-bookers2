<%= notice %>
<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'users/show', user: current_user %>
    </div>

    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class = "table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <td><%= image_tag @user.get_image("63x63") %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
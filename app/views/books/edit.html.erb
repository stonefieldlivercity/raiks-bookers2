<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <%= form_with model: @book, local:true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class = "field">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>

      <div class = "field">
        <h4>Opinion</h4>
        <%= f.text_area :body %>
      </div>
      <div>
        <%= f.submit "Update Book", class: 'btn btn-success' %>
      </div>
      <% end %>

        <p><%= link_to "Show", book_path(@book.id) %></p>
        <p> | </p>
        <p><%= link_to "Back", book_path %></p>
    </div>
  </div>
</div>
